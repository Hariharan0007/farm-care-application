<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@+id/home_farmcare_header"
android:id="@+id/home_contents_layout"
android:weightSum="2"
android:orientation="vertical"
tools:context=".ui.home.HomeFragment"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <ImageView
            android:src="@drawable/drone_book"
            android:id="@+id/book_drone"
            android:layout_height=  "200dp"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Drone"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book the drone for your fields"
            android:textSize="10sp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <ImageView
            android:src="@drawable/bookings"
            android:id="@+id/bookings"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookings"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See your current booking and status"
            android:textSize="10sp"
            >
        </TextView>

    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <ImageView
            android:src="@drawable/records"
            android:id="@+id/records"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Records"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View your previous records"
            android:textSize="10sp"
            >
        </TextView>

    </LinearLayout>

    <!--            Insert below-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="1">


        <ImageView
            android:src="@drawable/help_support"
            android:id="@+id/help_support"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help and Support"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support by the technical team"
            android:textSize="10sp"
            >
        </TextView>

    </LinearLayout>
</LinearLayout>

</LinearLayout>