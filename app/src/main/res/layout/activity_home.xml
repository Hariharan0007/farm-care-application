<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/home_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/farm_care_icon">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Care"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="@color/farm_green">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/home_header_layout"
            android:id="@+id/home_segment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:src="@drawable/drone_book"
                    android:id="@+id/book_drone"
                    android:layout_height=  "200dp"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Drone"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book the drone for your fields"
                    android:textSize="10sp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/bookings"
                    android:id="@+id/bookings"
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookings"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See your current booking and status"
                    android:textSize="10sp"
                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/home_segment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/records"
                    android:id="@+id/records"
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Records"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View your previous records"
                    android:textSize="10sp"
                    >
                </TextView>

            </LinearLayout>

            <!--            Insert below-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="1">


                <ImageView
                    android:src="@drawable/help_support"
                    android:id="@+id/help_support"
                    android:layout_height="200dp"
                    android:layout_width="200dp"
                    android:layout_marginTop="10dp"
                    >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help and Support"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support by the technical team"
                    android:textSize="10sp"
                    >
                </TextView>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>